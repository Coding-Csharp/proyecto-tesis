@{
    ViewData["Title"] = "Lista de asistencias";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

@section Styles {

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
}

<div class="container">

    <br />

    <div class="row header" style="text-align:center;color:green">
        <h3>Control de asistencias</h3>
    </div>

    <a id="btnCheckIn" class="btn btn-primary" data-toggle="modal" data-target="#mdlRegisterCheckIn">Marcar entrada</a>
    <a id="btnCheckOut" class="btn btn-warning" data-toggle="modal" data-target="#mdlRegisterCheckOut">Marcar salida</a>

    <hr />

    <table id="tblAttendances" class="table table-striped table-bordered" style="width:auto;"></table>
</div>

<div id="mdlRegisterCheckIn" class="modal fade" tabindex="-1" aria-labelledby="mdlRegisterCheckIn" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header float-right">

                <h5>Registrar salida</h5>

                <div class="text-right">
                    <i data-dismiss="modal" aria-label="Close" class="fa fa-close"></i>
                </div>

            </div>

            <div class="modal-body">
                <div>
                    <div class="box">

                        <label>Hora de entrada:</label>
                        <input id="iptCheckIn" class="form-control" readonly>

                        <label>Hora de salida:</label>
                        <input id="iptCheckOut" value="---" class="form-control" readonly>

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button id="btnRegisterCheckIn" type="button" class="btn btn-primary">Registrar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div id="mdlRegisterCheckOut" class="modal fade" tabindex="-1" aria-labelledby="mdlRegisterCheckOut" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header float-right">

                <h5>Registrar salida</h5>

                <div class="text-right">
                    <i data-dismiss="modal" aria-label="Close" class="fa fa-close"></i>
                </div>

            </div>

            <div class="modal-body">
                <div>
                    <div class="box">

                        <label>Hora de entrada:</label>
                        <input id="ipttCheckIn" value="---" class="form-control" readonly>

                        <label>Hora de salida:</label>
                        <input id="ipttCheckOut" class="form-control" readonly>

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button id="btnRegisterCheckOut" type="button" class="btn btn-primary">Registrar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript" src="https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function() {

            var attendances = [];

            $(window).on('load', async function () {

                try {

                    await loadListAttendances();

                } catch (error) {

                    console.error('Error durante la carga de datos: ', error);
                }
            });

            $("#btnCheckIn").on("click", function() {

                $("#iptCheckIn").val(getDateTime());
            });

            $("#btnRegisterCheckIn").on("click", async function() {

                await markAttendance("ENTRADA");
                await loadListAttendances();
            });

            $("#btnCheckOut").on("click", function() {

                $("#ipttCheckOut").val(getDateTime());
            });

            $("#btnRegisterCheckOut").on("click", async function() {

                await markAttendance("SALIDA");
                await loadListAttendances();
            });

            async function loadListAttendances() {

                try {

                    var data = await jQuery.ajax({

                        url: '@Url.Action("LoadListAttendances", "Employees")',
                        method: 'GET',
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8'
                    });

                    attendances = data;

                    fillTableAttendances(attendances);

                } catch (error) {

                    window.open('@Url.Action("Error", "Home")', '_self');
                }
            }

            async function markAttendance(markType) {

                try {

                    var data = await jQuery.ajax({

                        url: '@Url.Action("MarkAttendance", "Employees")' + `?markType=${markType}`,
                        method: 'GET',
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8'
                    });

                    if (data === true) {

                        Swal.fire({
                            icon: 'success',
                            title: 'Se marco su asistencia!',
                            text: `Se registro correctamente su hora de ${markType}.`
                        });
                    } else {

                        Swal.fire({
                            icon: 'error',
                            title: 'No se marco la asistencia!',
                            text: `No se pudo registrar su hora de ${markType}.`
                        });
                    }

                } catch (error) {

                    window.open('@Url.Action("Error", "Home")', '_self');
                }
            }

            function fillTableAttendances(listAttendances) {

                if (listAttendances.length === 0) {

                    Swal.fire({
                        icon: 'info',
                        title: 'No se encontraron resultados!',
                        text: 'No existen datos.'
                    });

                    return;
                }

                var columns = [];

                columns = [
                    { data: 'Id', title: 'Id' },
                    { data: 'Firstname', title: 'Nombre' },
                    { data: 'Lastname', title: 'Apellido' },
                    { data: 'CheckIn', title: 'Ingreso' },
                    { data: 'CheckOut', title: 'Salida' },
                    { data: 'MinuteLate', title: 'Min tarde' }
                ];

                if ($.fn.DataTable.isDataTable('#tblAttendances')) {

                    $('#tblAttendances').DataTable().clear().destroy();
                }

                $('#tblAttendances').DataTable({
                    data: listAttendances,
                    columns: columns,
                    searching: true,
                    paging: true,
                    ordering: true
                });
            }

            function getDateTime() {

                const date = new Date();

                const day = date.getDate();
                const mounth = date.getMonth() + 1;
                const year = date.getFullYear();
                const hour = date.getHours();
                const minutes = date.getMinutes();

                return `${day}/${mounth}/${year} ${hour}:${minutes}`;
            }

            function getFormattedDate(date) {

                let day = String(date.getDate()).padStart(2, '0');
                let mounth = String(date.getMonth() + 1).padStart(2, '0');
                let year = date.getFullYear();
                let hour = String(date.getHours()).padStart(2, '0');
                let minutes = String(date.getMinutes()).padStart(2, '0');

                return `${day}/${mounth}/${year} ${hour}:${minutes}`;
            }
        });

    </script>
}